<div class="container-fluid">
  <h3>Login to start using Pan, Skillet and Pot</h3>
  <%= form_tag :action => :create, local: true do |f| %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <div>
      <%= submit_tag 'Login' %>
    </div>
  <% end %>
</div>
