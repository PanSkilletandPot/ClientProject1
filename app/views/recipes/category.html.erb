<main>
	<%= render partial: "img_header" %>

	<section class="category-section">
		<header class="category-header">
			<h2><%= @type + " Category"%></h2>
		</header>
		<article class="category-diplay">	
			<ul>
				<% @recipes.each do |recipe| %>
					<li><h3><%= link_to recipe.recipe_name, recipe_path(recipe.id) %></h3> 
						<span><%= recipe.average_rating > 0 ? recipe.average_rating.to_s + " Stars" : "N/A" %></span>
					</li>
				<% end %>
			</ul>
		</article>
	</section>
</main>