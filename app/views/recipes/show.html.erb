<div class='container-fluid recipe'>
  <div id='heading'>
    <h1><%= @recipe.recipe_name %></h1>
    <h2><%= @recipe.category %></h2>
  </div>
  <div id='recipe_body'>
    prep time: <%= @recipe.prep_time %> <br>
    instructions: <%= @recipe.instructions %>
  </div>
  <% if current_user && current_user.id == @recipe.user_id %>
    <%= link_to "Edit", edit_recipe_path(@recipe) %>
    <%= link_to "Delete", @recipe, {method: :delete, data: { confirm: 'Are you sure?' }} %>
  <% end %>
</div>
<div class='container-fluid reviews'>

<% if logged_in? %>
  <h3> Write a review </h3>
    <%= form_for :review, url: { :controller => "recipes", action: "reviews" } do |f| %>
      <%= f.label :rating %><br>
      <%= f.select :rating, [ 0,1,2,3,4,5 ]%>
      <%= f.label :body %><br>
      <%= f.text_area :body%>
      <%= f.hidden_field :recipe_id, :value => @recipe.id%>
      <%= f.hidden_field :user_id, :value => @user_id%>
      <%= f.submit %>
  <% end %>
<% end %>

<h3> Reviews </h3>
  <ul>
  <% @reviews.each do |review| %>
    <li>Reviewer: <%= review.user.username %><br></li>
    <li>Body: <%= review.body %></li></br>
  <% end %>
  </ul>
</div>
