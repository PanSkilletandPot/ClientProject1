<div class='recipe'>
  <div id='heading'>
    <h1><%= @recipe.recipe_name %></h1>
    <h2><%= @recipe.category %></h2>
  </div>
  <div id='recipe_body'>
    prep time: <%= @recipe.prep_time %> <br>
    instructions: <%= @recipe.instructions %>
  </div>
</div>
<div class='reviews'>
<h3> Reviews </h3>
  <% @reviews.each do |review| %>
    <%= review.user.username %><br>
    <%= review.body %>
  <% end %>
</div>